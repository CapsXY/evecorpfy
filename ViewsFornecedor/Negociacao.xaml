<UserControl x:Class="evecorpfy.ViewsFornecedor.Negociacao"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:evecorpfy.ViewsFornecedor"
             xmlns:conv="clr-namespace:evecorpfy.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="684"
             d:DesignWidth="1010"
             Background="White">
    <UserControl.Resources>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid>
        <!--Background-->
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF0FDF45" Offset="1"/>
                <GradientStop Color="White" Offset="0.84"/>
            </LinearGradientBrush>
        </Grid.Background>
        <!--Logo-->
        <Image HorizontalAlignment="Center"
         Height="68"
         Margin="0,10,0,0"
         VerticalAlignment="Top"
         Width="70"
         Source="C:\Users\CaioA\Documents\GitHub\evecorpfy\Resources\handshake-green.png"/>
        <!--Título e Subtítulo-->
        <Label Content="NEGOCIAÇÃO DE EVENTOS"
         HorizontalAlignment="Center"
         Margin="0,63,0,0"
         VerticalAlignment="Top"
         FontWeight="Bold"
         FontSize="36"/>
        <Label Content="Negocie, orçe os valores com os Organizadores do Evento"
         HorizontalAlignment="Center"
         Margin="0,104,0,0"
         VerticalAlignment="Top"
         FontSize="16" RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.139"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <DataGrid x:Name="DataGridEventos"
       AutoGenerateColumns="False"
       CanUserAddRows="False"
       IsReadOnly="True"
       Margin="10,140,10,117" Background="White">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nome do Evento" Binding="{Binding Nome}" Width="*"/>
                <DataGridTextColumn Header="Início" Binding="{Binding DataInicio, StringFormat=d}" Width="120"/>
                <DataGridTextColumn Header="Fim" Binding="{Binding DataFim, StringFormat=d}" Width="120"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="150"/>
                <DataGridTextColumn Header="Orçamento Máximo" Binding="{Binding OrcamentoMaximo, StringFormat=R$ {0:N2}}" Width="150"/>
                <DataGridTemplateColumn Header="Ações" Width="180">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Grid>
                                <!-- Botão de Negociar -->
                                <Button Content="Negociar Serviços"
                        Tag="{Binding}"
                        Click="Negociar_Click"
                        Panel.ZIndex="0"
                        Visibility="{Binding TemOrcamento, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Invert}"/>

                                <!-- Botão de Cancelar -->
                                <Button Content="Cancelar Proposta"
                        Tag="{Binding}"
                        Click="Cancelar_Click"
                        Background="Red" Foreground="White"
                        Panel.ZIndex="1"
                        Visibility="{Binding TemOrcamento, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            </Grid>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
