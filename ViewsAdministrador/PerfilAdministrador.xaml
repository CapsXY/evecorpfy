<UserControl x:Class="evecorpfy.ViewsAdministrador.PerfilAdministrador"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:evecorpfy.ViewsAdministrador"
             mc:Ignorable="d" 
             d:DesignHeight="684"
             d:DesignWidth="1010"
             Background="White">
    <!--Grid Principal-->
    <Grid>
        <!--Background-->
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1"
                                 StartPoint="0.5,0">
                <GradientStop Color="#FF71C4F3"
                              Offset="1"/>
                <GradientStop Color="White"
                              Offset="0.84"/>
            </LinearGradientBrush>
        </Grid.Background>
        <!--Ellipse do Perfil-->
        <Ellipse x:Name="EllipseFoto"
                 HorizontalAlignment="Center"
                 Height="168"
                 Margin="0,25,0,0"
                 VerticalAlignment="Top"
                 Width="168"
                 StrokeThickness="3"
                 MouseLeftButtonUp="EllipseFoto_MouseLeftButtonUp">
            <Ellipse.Stroke>
                <LinearGradientBrush EndPoint="0.5,1"
                                     StartPoint="0.5,0"
                                     SpreadMethod="Pad">
                    <GradientStop Color="White"
                                  Offset="0.435"/>
                    <GradientStop Color="#FF71C4F3"
                                  Offset="1"/>
                </LinearGradientBrush>
            </Ellipse.Stroke>
            <Ellipse.Fill>
                <!--Imagem do Perfil-->
                <ImageBrush x:Name="ImagemPerfil"
                            ImageSource="C:\Users\CaioA\Documents\GitHub\evecorpfy\Resources\photo.png"
                            Stretch="UniformToFill"/>
            </Ellipse.Fill>
        </Ellipse>
        <!--Nome do Perfil-->
        <TextBlock x:Name="TextBlockNomeUsuario"
                   HorizontalAlignment="Center"
                   Margin="0,200,0,0"
                   TextWrapping="Wrap"
                   Text="NomeUsuario"
                   VerticalAlignment="Top"
                   FontSize="20"/>
        <!--Checkbox Habilitado-->
        <CheckBox x:Name="CheckboxHabilitado"
                  Content="Habilitado"
                  HorizontalAlignment="Center"
                  Margin="0,236,0,0"
                  VerticalAlignment="Top"
                  Width="78"/>
        <!--Usuário-->
        <Label Content="Nome:"
               HorizontalAlignment="Left"
               Margin="252,260,0,0"
               VerticalAlignment="Top"
               FontSize="20"/>
        <TextBox x:Name="TextBoxNomeUsuario"
                 HorizontalAlignment="Left"
                 Margin="331,264,0,0"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="372"
                 FontSize="20"/>
        <!--Senha-->
        <Label Content="Senha:"
               HorizontalAlignment="Left"
               Margin="254,297,0,0"
               VerticalAlignment="Top"
               FontSize="20"/>
        <PasswordBox x:Name="PasswordboxSenha"
                     HorizontalAlignment="Left"
                     Margin="331,305,0,0"
                     VerticalAlignment="Top"
                     Width="372"
                     FontSize="20"/>
        <!--Email-->
        <Label Content="E-mail:"
               HorizontalAlignment="Left"
               Margin="252,339,0,0"
               VerticalAlignment="Top"
               FontSize="20" 
               RenderTransformOrigin="0.556,-0.282"/>
        <TextBox x:Name="TextBoxEmail"
                 HorizontalAlignment="Left"
                 Margin="331,347,0,0"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="372"
                 FontSize="20"/>
        <!--Tipo-->
        <Label Content="Tipo:"
               HorizontalAlignment="Left"
               Margin="268,383,0,0"
               VerticalAlignment="Top"
               FontSize="20"
               RenderTransformOrigin="0.556,-0.282"/>
        <Label x:Name="LabelTipo"
               Content="Administrador"
               HorizontalAlignment="Left"
               Margin="331,383,0,0"
               VerticalAlignment="Top"
               Width="181"
               FontSize="20"
               FontWeight="Bold"/>
        <!--Botão Confirmar-->
        <Button x:Name="ButtonConfirmar"
                Click="ButtonConfirmar_Click"
                Content="CONFIRMAR"
                HorizontalAlignment="Center"
                Margin="0,436,0,0"
                VerticalAlignment="Top"
                FontSize="16"
                Height="40"
                Width="206"
                BorderBrush="{x:Null}"
                Background="#FF71C4F3"
                FontWeight="Bold"/>
    </Grid>
</UserControl>
