<Window x:Class="evecorpfy.MenuOrganizador"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:evecorpfy"
        mc:Ignorable="d"
        Title="EVECORPFY - Menu do Organizador"
        Height="720"
        Width="1280"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"
        Icon="C:\Users\Lenovo\Documents\GitHub\evecorpfy\Resources\logo.png">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1"
                          StartPoint="0.5,0">
            <GradientStop Color="#FFDF800F"
                       Offset="1"/>
            <GradientStop Color="White"
                       Offset="0.84"/>
        </LinearGradientBrush>
    </Window.Background>
    <!--Grid Principal-->
    <Grid>
        <!--Definição de tamanho do Menu Lateral-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!--Menu Lateral-->
        <StackPanel Grid.Column="0">
            <!--Background do Menu Lateral-->
            <StackPanel.Background>
                <LinearGradientBrush EndPoint="0.5,1"
                                     StartPoint="0.5,0">
                    <GradientStop Color="#FFDF800F"
                                  Offset="1"/>
                    <GradientStop Color="White"
                                  Offset="0.84"/>
                </LinearGradientBrush>
            </StackPanel.Background>
            <!--Logo-->
            <Grid x:Name="GridLogo"
                Height="180"
                Width="250"
                MouseEnter="Grid_MouseEnter"
                MouseLeave="Grid_MouseLeave"
                MouseLeftButtonUp="GridLogo_MouseLeftButtonUp"
                Background="Transparent">
                <Image x:Name="Logo"
                    Stretch="Uniform"
                    Margin="39,19,39,20"
                    Source="C:\Users\Lenovo\Documents\GitHub\evecorpfy\Resources\logo-orange.png"
                    Cursor="Hand"/>
            </Grid>
            <Separator Height="8"
                Background="#FFDF800F"
                Opacity="0.5"/>
            <!--Opção de Perfil -->
            <Grid x:Name="GridButtonPerfil"
                Height="68"
                Width="250"
                MouseEnter="Grid_MouseEnter"
                MouseLeave="Grid_MouseLeave"
                MouseLeftButtonUp="GridButtonPerfil_MouseLeftButtonUp"
                Cursor="Hand"
                Background="Transparent">
                <Label Content="PERFIL DO USUÁRIO"
                    Margin="67,21,37,21"
                    FontWeight="Bold"
                    FontSize="14"/>
                <Image HorizontalAlignment="Left"
                    Height="40"
                    Margin="28,0,0,0"
                    VerticalAlignment="Center"
                    Width="39"
                    Source="C:\Users\Lenovo\Documents\GitHub\evecorpfy\Resources\user-orange.png"/>
            </Grid>
            <Separator Height="8"
                Background="#FFDF800F"
                Opacity="0.5"/>
            <!--Opção de Cadastro de Eventos -->
            <Grid x:Name="GridButtonCadastroEventos"
                Height="68"
                Width="250"
                MouseEnter="Grid_MouseEnter"
                MouseLeave="Grid_MouseLeave"
                MouseLeftButtonUp="GridButtonCadastroEventos_MouseLeftButtonUp"
                Cursor="Hand"
                Background="Transparent">
                <Label Content="CADASTRO DE EVENTOS"
                    Margin="67,21,10,21"
                    FontWeight="Bold"
                    FontSize="14"/>
                <Image HorizontalAlignment="Left"
                    Height="40"
                    Margin="28,0,0,0"
                    VerticalAlignment="Center"
                    Width="39"
                    Source="C:\Users\Lenovo\Documents\GitHub\evecorpfy\Resources\table-orange.png"/>
            </Grid>
            <Separator Height="8"
                Background="#FFDF800F"
                Opacity="0.5"/>
            <!--Opção de Negociações -->
            <Grid x:Name="GridButtonNegociacoes"
                Height="68"
                Width="250"
                MouseEnter="Grid_MouseEnter"
                MouseLeave="Grid_MouseLeave"
                MouseLeftButtonUp="GridButtonNegociacoes_MouseLeftButtonUp"
                Cursor="Hand"
                Background="Transparent">
                <Label Content="NEGOCIAÇÕES"
                    Margin="67,21,37,21"
                    FontWeight="Bold"
                    FontSize="14"/>
                <Image HorizontalAlignment="Left"
                    Height="40"
                    Margin="28,0,0,0"
                    VerticalAlignment="Center"
                    Width="39"
                    Source="C:\Users\Lenovo\Documents\GitHub\evecorpfy\Resources\handshake-orange.png"/>
            </Grid>
            <Separator Height="8" Background="#FFDF800F" Opacity="0.5"/>
            <!--Opção de Gestão de Eventos -->
            <Grid x:Name="GridButtonGestaoEventos"
                Height="68"
                Width="250"
                MouseEnter="Grid_MouseEnter"
                MouseLeave="Grid_MouseLeave"
                MouseLeftButtonUp="GridButtonGestaoEventos_MouseLeftButtonUp"
                Cursor="Hand"
                Background="Transparent">
                <Label Content="GESTÃO DE EVENTOS"
                    Margin="67,21,29,21"
                    FontWeight="Bold"
                    FontSize="14"/>
                <Image HorizontalAlignment="Left"
                    Height="40"
                    Margin="28,0,0,0"
                    VerticalAlignment="Center"
                    Width="39"
                    Source="C:\Users\Lenovo\Documents\GitHub\evecorpfy\Resources\calendar-orange.png"/>
            </Grid>
            <Separator Height="8" Background="#FFDF800F" Opacity="0.5"/>
            <!--Opção de Sair -->
            <Grid x:Name="GridButtonSair"
                Height="68"
                Width="250"
                MouseEnter="Grid_MouseEnter"
                MouseLeave="Grid_MouseLeave"
                MouseLeftButtonUp="GridButtonSair_MouseLeftButtonUp"
                Cursor="Hand"
                Background="Transparent">
                <Label Content="SAIR"
                    Margin="67,21,29,21"
                    FontWeight="Bold"
                    FontSize="14"/>
                <Image HorizontalAlignment="Left"
                    Height="40"
                    Margin="28,0,0,0"
                    VerticalAlignment="Center"
                    Width="39"
                    Source="C:\Users\Lenovo\Documents\GitHub\evecorpfy\Resources\logout-orange.png"/>
            </Grid>
        </StackPanel>
        <!--Área de Conteúdo Principal-->
        <ContentControl x:Name="ContentArea"
                        Grid.Column="1"/>
    </Grid>
</Window>
