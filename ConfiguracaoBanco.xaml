<Window x:Class="evecorpfy.Views.ConfiguracaoBanco"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configuração do Banco de Dados" Height="280" Width="420"
        WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize">
    <Grid Margin="10,10,10,9" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,5" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Servidor:" Width="80" VerticalAlignment="Center"/>
            <TextBox x:Name="txtServidor" Width="250"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,5" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Banco:" Width="80" VerticalAlignment="Center"/>
            <TextBox x:Name="txtBanco" Width="250"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,5" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Usuário:" Width="80" VerticalAlignment="Center"/>
            <TextBox x:Name="txtUsuario" Width="250"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,5" Grid.Row="3" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Senha:" Width="80"/>
            <PasswordBox x:Name="txtSenha" Width="250"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="110,0,0,0" Grid.Row="4" HorizontalAlignment="Left" VerticalAlignment="Center">
            <Button Content="Testar Conexão" Width="120" Margin="0,0,10,0" Click="BtnTestar_Click">
                <Button.BorderBrush>
                    <SolidColorBrush Color="#FF707070" Opacity="0"/>
                </Button.BorderBrush>
            </Button>
            <Button Content="Salvar" Width="80" Click="BtnSalvar_Click">
                <Button.BorderBrush>
                    <SolidColorBrush Color="#FF707070" Opacity="0"/>
                </Button.BorderBrush>
            </Button>
        </StackPanel>
        <Image HorizontalAlignment="Center" Height="48" Margin="0,-48,0,0" VerticalAlignment="Top" Width="63" Source="/Resources/logo.png"/>
    </Grid>
</Window>
