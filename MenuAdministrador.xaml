            </Grid>
            <Separator Height="8" Background="#FF71C4F3" Opacity="0.5"/>
            <Grid x:Name="GridButtonGestaoEvento"
                Height="68"
                Width="250"
                MouseLeftButtonUp="GridButtonGestaoEvento_MouseLeftButtonUp"
                Cursor="Hand"
                Background="Transparent"
                MouseEnter="GridButtonGestaoEvento_MouseEnter"
                MouseLeave="GridButtonGestaoEvento_MouseLeave">
                <Label Content="GESTÃO DE EVENTOS" Margin="67,21,29,21" FontWeight="Bold" FontSize="14"/>
                <Image HorizontalAlignment="Left" Height="40" Margin="28,0,0,0" VerticalAlignment="Center" Width="39" Source="C:\Users\CaioA\source\repos\evecorpfy\Resources\group.png"/>
