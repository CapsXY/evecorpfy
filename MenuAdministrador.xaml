<Window x:Class="evecorpfy.MenuAdministrador"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:evecorpfy"
        mc:Ignorable="d"
        Title="EVECORPFY - Menu do Administrador"
        Height="720"
        Width="1280"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"
        Icon="/Resources/logo.png">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1"
                             StartPoint="0.5,0">
            <GradientStop Color="#FF71C4F3"
                          Offset="1"/>
            <GradientStop Color="White"
                          Offset="0.84"/>
        </LinearGradientBrush>
    </Window.Background>
    <!--Grid Principal-->
    <Grid>
        <!--Definição de tamanho do Menu Lateral-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <!--Menu Lateral-->
        <StackPanel Grid.Column="0">
            <!--Background do Menu Lateral-->
            <StackPanel.Background>
                <LinearGradientBrush EndPoint="0.5,1"
                                     StartPoint="0.5,0">
                    <GradientStop Color="#FF71C4F3"
                                  Offset="1"/>
                    <GradientStop Color="White"
                                  Offset="0.84"/>
                </LinearGradientBrush>
            </StackPanel.Background>
            <!--Logo-->
            <Grid x:Name="GridLogo"
                Height="180"
                Width="250"
                MouseLeftButtonUp="GridLogo_MouseLeftButtonUp"
                Background="Transparent">
                <Image x:Name="Logo"
                       Stretch="Uniform"
                       Margin="39,19,39,20"
                       Source="/Resources/logo-blue.png"
                       Cursor="Hand"/>
            </Grid>
            <Separator Height="8"
                       Background="#FF71C4F3"
                       Opacity="0.5"/>
            <!--Opção de Perfil -->
            <Grid x:Name="GridButtonPerfil"
                Height="68"
                Width="250"
                MouseEnter="Grid_MouseEnter"
                MouseLeave="Grid_MouseLeave"
                MouseLeftButtonUp="GridButtonPerfil_MouseLeftButtonUp"
                Cursor="Hand"
                Background="Transparent">
                <Label Content="PERFIL DO USUÁRIO"
                       Margin="67,21,37,21"
                       FontWeight="Bold"
                       FontSize="14"/>
                <Image HorizontalAlignment="Left"
                       Height="40"
                       Margin="28,0,0,0"
                       VerticalAlignment="Center"
                       Width="39"
                       Source="/Resources/user.png"/>
            </Grid>
            <Separator Height="8"
                       Background="#FF71C4F3"
                       Opacity="0.5"/>
            <!--Opção de Tipo de Evento -->
            <Grid x:Name="GridButtonTipoEvento"
                Height="68"
                Width="250"
                MouseEnter="Grid_MouseEnter"
                MouseLeave="Grid_MouseLeave"  
                MouseLeftButtonUp="GridButtonTipoEvento_MouseLeftButtonUp"
                Cursor="Hand"
                Background="Transparent">
                <Label Content="TIPO DE EVENTO"
                       Margin="67,21,37,21"
                       FontWeight="Bold"
                       FontSize="14"/>
                <Image HorizontalAlignment="Left"
                       Height="40"
                       Margin="28,0,0,0"
                       VerticalAlignment="Center"
                       Width="39"
                       Source="/Resources/balloon.png"/>
            </Grid>
            <Separator Height="8"
                       Background="#FF71C4F3"
                       Opacity="0.5"/>
            <!--Opção de Tipo de Serviço -->
            <Grid x:Name="GridButtonTipoServico"
                Height="68"
                Width="250"
                MouseEnter="Grid_MouseEnter"
                MouseLeave="Grid_MouseLeave"
                MouseLeftButtonUp="GridButtonTipoServico_MouseLeftButtonUp"
                Cursor="Hand"
                Background="Transparent">
                <Label Content="TIPO DE SERVIÇO"
                       Margin="67,21,37,21"
                       FontWeight="Bold"
                       FontSize="14"/>
                <Image HorizontalAlignment="Left"
                       Height="40"
                       Margin="28,0,0,0"
                       VerticalAlignment="Center"
                       Width="39"
                       Source="/Resources/truck.png"/>
            </Grid>
            <Separator Height="8" Background="#FF71C4F3" Opacity="0.5"/>
            <!--Opção de Gestão de Eventos -->
            <Grid x:Name="GridButtonGestaoEventos"
                Height="68"
                Width="250"
                MouseEnter="Grid_MouseEnter"
                MouseLeave="Grid_MouseLeave"
                MouseLeftButtonUp="GridButtonGestaoEventos_MouseLeftButtonUp"
                Cursor="Hand"
                Background="Transparent">
                <Label Content="GESTÃO DE EVENTOS"
                       Margin="67,21,29,21"
                       FontWeight="Bold"
                       FontSize="14"/>
                <Image HorizontalAlignment="Left"
                       Height="40"
                       Margin="28,0,0,0"
                       VerticalAlignment="Center"
                       Width="39"
                       Source="/Resources/group.png"/>
            </Grid>
            <Separator Height="8" Background="#FF71C4F3" Opacity="0.5"/>
            <!--Opção de Sair -->
            <Grid x:Name="GridButtonSair"
                Height="68"
                Width="250"
                MouseEnter="Grid_MouseEnter"
                MouseLeave="Grid_MouseLeave"
                MouseLeftButtonUp="GridButtonSair_MouseLeftButtonUp"
                Cursor="Hand"
                Background="Transparent">
                <Label Content="SAIR"
                       Margin="67,21,29,21"
                       FontWeight="Bold"
                       FontSize="14"/>
                <Image HorizontalAlignment="Left"
                       Height="40"
                       Margin="28,0,0,0"
                       VerticalAlignment="Center"
                       Width="39"
                       Source="/Resources/logout.png"/>
            </Grid>
        </StackPanel>
        <!--Área de Conteúdo Principal-->
        <ContentControl x:Name="ContentArea"
                        Grid.Column="1"/>
    </Grid>
</Window>
