                Background="Transparent"
                MouseEnter="GridButtonTipoEvento_MouseEnter"
                MouseLeave="GridButtonTipoEvento_MouseLeave">
                <Label Content="TIPO DE EVENTO" Margin="67,21,37,21" FontWeight="Bold" FontSize="14"/>
                <Image HorizontalAlignment="Left" Height="40" Margin="28,0,0,0" VerticalAlignment="Center" Width="39" Source="C:\Users\CaioA\source\repos\evecorpfy\Resources\balloon.png"/>
            </Grid>
            <Separator Height="8" Background="#FF71C4F3" Opacity="0.5"/>
            <Grid x:Name="GridButtonTipoServico"
                Height="68"
                Width="250"
                MouseLeftButtonUp="GridButtonTipoServico_MouseLeftButtonUp"
                Cursor="Hand"
                Background="Transparent"
                MouseEnter="GridButtonTipoServico_MouseEnter"
                MouseLeave="GridButtonTipoServico_MouseLeave">
                <Label Content="TIPO DE SERVIÇO" Margin="67,21,37,21" FontWeight="Bold" FontSize="14"/>
