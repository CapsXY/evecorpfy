<UserControl x:Class="evecorpfy.ViewsParticipante.PerfilParticipante"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:evecorpfy.ViewsParticipante"
             mc:Ignorable="d" 
             d:DesignHeight="684"
             d:DesignWidth="1010"
             Background="White">
    <Grid>
        <!--Grid, Linear Gradient e Gradient Stop do Background-->
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1"
                                 StartPoint="0.5,0">
                <GradientStop Color="#FFBA0FDF"
                              Offset="1"/>
                <GradientStop Color="White"
                              Offset="0.84"/>
            </LinearGradientBrush>
        </Grid.Background>
        <!--Ellipse do Perfil-->
        <Ellipse x:Name="EllipseFoto"
                 HorizontalAlignment="Center"
                 Height="168"
                 Margin="0,25,0,0"
                 VerticalAlignment="Top"
                 Width="168"
                 StrokeThickness="3"
                 MouseLeftButtonUp="EllipseFoto_MouseLeftButtonUp">
            <!--Ellipse, Image e Linear Gradient do Usuário-->
            <Ellipse.Stroke>
                <LinearGradientBrush EndPoint="0.5,1"
                                     StartPoint="0.5,0"
                                     SpreadMethod="Pad">
                    <GradientStop Color="White"
                                  Offset="0.435"/>
                    <GradientStop Color="#FFBA0FDF"
                                  Offset="1"/>
                </LinearGradientBrush>
            </Ellipse.Stroke>
            <Ellipse.Fill>
                <ImageBrush x:Name="ImagemPerfil"
                            ImageSource="C:\Users\CaioA\Documents\GitHub\evecorpfy\Resources\photo.png"
                            Stretch="UniformToFill"/>
            </Ellipse.Fill>
        </Ellipse>
        <!--TextBlock Nome do Usuário-->
        <TextBlock x:Name="TextBlockNomeUsuario"
                   HorizontalAlignment="Center"
                   Margin="0,200,0,0"
                   TextWrapping="Wrap"
                   Text="NomeUsuario"
                   VerticalAlignment="Top"
                   FontSize="20"/>
        <!--Checkbox Habilitado-->
        <CheckBox x:Name="CheckboxHabilitado"
                  Content="Habilitado"
                  HorizontalAlignment="Center"
                  Margin="0,236,0,0"
                  VerticalAlignment="Top"
                  Width="78"/>
        <!--Label e TextBox Usuário-->
        <Label Content="Nome:"
               HorizontalAlignment="Left"
               Margin="252,260,0,0"
               VerticalAlignment="Top"
               FontSize="20"/>
        <TextBox x:Name="TextBoxNomeUsuario"
                 HorizontalAlignment="Left"
                 Margin="331,264,0,0"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="418"
                 FontSize="20"/>
        <!--Label e TextBox Senha-->
        <Label Content="Senha:"
               HorizontalAlignment="Left"
               Margin="254,297,0,0"
               VerticalAlignment="Top"
               FontSize="20"/>
        <PasswordBox x:Name="PasswordboxSenha"
                     HorizontalAlignment="Left"
                     Margin="331,305,0,0"
                     VerticalAlignment="Top"
                     Width="418"
                     FontSize="20"/>
        <!--Label e TextBox Email-->
        <Label Content="E-mail:"
               HorizontalAlignment="Left"
               Margin="252,339,0,0"
               VerticalAlignment="Top"
               FontSize="20" 
               RenderTransformOrigin="0.556,-0.282"/>
        <TextBox x:Name="TextBoxEmail"
                 HorizontalAlignment="Left"
                 Margin="331,347,0,0"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="418"
                 FontSize="20"/>
        <!--Label e ComboBox Categoria-->
        <Label Content="Categoria:"
               HorizontalAlignment="Left"
               Margin="223,384,0,0"
               VerticalAlignment="Top"
               FontSize="20"/>
        <ComboBox x:Name="ComboBoxCategoria"
                  HorizontalAlignment="Left"
                  Margin="331,388,0,0"
                  VerticalAlignment="Top"
                  Width="418"
                  FontSize="20"/>
        <!--Label e TextBox CPF-->
        <Label Content="CPF:"
               HorizontalAlignment="Left"
               Margin="275,427,0,0"
               VerticalAlignment="Top"
               FontSize="20"/>
        <TextBox x:Name="TextBoxCPF" HorizontalAlignment="Left"
                 Margin="331,433,0,0"
                 VerticalAlignment="Top"
                 Width="150"
                 FontSize="20"
                 PreviewTextInput="TextBoxCPF_PreviewTextInput"
                 TextChanged="TextBoxCPF_TextChanged"/>
        <!--Label e TextBox Telefone-->
        <Label Content="Telefone:"
               HorizontalAlignment="Left"
               Margin="502,429,0,0"
               VerticalAlignment="Top"
               FontSize="20"/>
        <TextBox x:Name="TextBoxTelefone"
                 HorizontalAlignment="Left"
                 Margin="599,433,0,0"
                 VerticalAlignment="Top"
                 Width="150"
                 FontSize="20"
                 PreviewTextInput="TextBoxTelefone_PreviewTextInput"
                 TextChanged="TextBoxTelefone_TextChanged"/>
        <!--Label e Label Tipo Role-->
        <Label Content="Tipo:"
               HorizontalAlignment="Left"
               Margin="268,471,0,0"
               VerticalAlignment="Top"
               FontSize="20"
               RenderTransformOrigin="0.556,-0.282"/>
        <Label x:Name="LabelTipo"
               Content="Participante"
               HorizontalAlignment="Left"
               Margin="331,471,0,0"
               VerticalAlignment="Top"
               Width="181"
               FontSize="20"
               FontWeight="Bold"/>
        <!--Button Confirmar-->
        <Button x:Name="ButtonConfirmar"
                Click="ButtonConfirmar_Click"
                Content="CONFIRMAR"
                HorizontalAlignment="Left"
                Margin="437,513,0,0"
                VerticalAlignment="Top"
                FontSize="16"
                Height="40"
                Width="206"
                BorderBrush="{x:Null}"
                Background="#FFBA0FDF"
                FontWeight="Bold"/>
    </Grid>
</UserControl>