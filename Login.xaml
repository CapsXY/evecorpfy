<Window x:Class="evecorpfy.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:evecorpfy"
        mc:Ignorable="d"
        Title="EVECORPFY - Login"
        Height="542" Width="767"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Icon="C:\Users\CaioA\Documents\GitHub\evecorpfy\Resources\logo.png"
        WindowStyle="SingleBorderWindow">
    <Grid x:Name="GridPrincipal">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF71C4F3" Offset="0.909"/>
                <GradientStop Color="White" Offset="0.799"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Image x:Name="ImageLogo" Margin="282,30,277,337" Source="C:\Users\CaioA\Documents\GitHub\evecorpfy\Resources\logo.png" Stretch="Fill"/>

        <Label x:Name="LabelTitulo" Content="Acesso ao Sistema" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="304,195,0,0" FontSize="18" FontWeight="Bold"/>
        <TextBox x:Name="TextBoxUsuario" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="205" FontSize="18" Margin="287,239,0,0"/>
        <PasswordBox x:Name="PasswordBoxSenha" HorizontalAlignment="Left" Margin="287,276,0,0" VerticalAlignment="Top" Width="204" FontSize="18"/>

        <Button x:Name="ButtonAcessar" Content="Acessar" HorizontalAlignment="Left" Margin="286,371,0,0" VerticalAlignment="Top" Click="ButtonAcessar_Click" FontSize="16" Height="40" Width="206" BorderBrush="{x:Null}" Background="#FF71C4F3" FontWeight="Bold"/>
        <Image HorizontalAlignment="Left" Height="26" Margin="256,276,0,0" VerticalAlignment="Top" Width="26" Source="C:\Users\CaioA\Documents\GitHub\evecorpfy\Resources\lock.png"/>
        <Image HorizontalAlignment="Left" Height="26" Margin="256,239,0,0" VerticalAlignment="Top" Width="28" Source="C:\Users\CaioA\Documents\GitHub\evecorpfy\Resources\user.png"/>
        <Label Content="Novo por aqui?" HorizontalAlignment="Left" Margin="295,307,0,0" VerticalAlignment="Top" FontSize="14"/>
        <Label Content="Cadastre-se" HorizontalAlignment="Left" Margin="395,307,0,0" VerticalAlignment="Top" Foreground="#FF71C4F3" FontWeight="Bold" FontSize="14" Cursor="Hand"/>
        <Label Content="Esqueceu a sua senha?" HorizontalAlignment="Left" Margin="312,333,0,0" VerticalAlignment="Top" FontSize="14" FontWeight="Bold" Cursor="Hand"/>
    </Grid>
</Window>
