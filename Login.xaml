<Window x:Class="evecorpfy.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:evecorpfy"
        mc:Ignorable="d"
        Title="EVECORPFY - Login"
        Height="542"
        Width="767"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Icon="C:\Users\Lenovo\Documents\GitHub\evecorpfy\Resources\logo.png"
        WindowStyle="SingleBorderWindow">
    <!--Grid Principal-->
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Offset="0.84" Color="White"/>
                <GradientStop Offset="1" Color="#FF5D5D5D"/>
            </LinearGradientBrush>
        </Grid.Background>
        <!--Background-->
        <!--Logo-->
        <Image Margin="282,30,277,337"
               Source="C:\Users\Lenovo\Documents\GitHub\evecorpfy\Resources\logo.png"
               Stretch="Fill"/>
        <!--Título-->
        <Label Content="Acesso ao Sistema"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Margin="304,195,0,0"
               FontSize="18"
               FontWeight="Bold"/>
        <!--Usuario-->
        <Image HorizontalAlignment="Left"
               Height="26"
               Margin="256,239,0,0"
               VerticalAlignment="Top"
               Width="28"
               Source="C:\Users\Lenovo\Documents\GitHub\evecorpfy\Resources\user-gray.png"/>
        <TextBox x:Name="TextBoxUsuario"
                 HorizontalAlignment="Left"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="205"
                 FontSize="18"
                 Margin="287,239,0,0"/>
        <!--Senha-->
        <Image HorizontalAlignment="Left"
               Height="26"
               Margin="256,276,0,0"
               VerticalAlignment="Top"
               Width="26"
               Source="C:\Users\Lenovo\Documents\GitHub\evecorpfy\Resources\lock-gray.png"/>
        <PasswordBox x:Name="PasswordboxSenha"
                     HorizontalAlignment="Left"
                     Margin="287,276,0,0"
                     VerticalAlignment="Top"
                     Width="204"
                     FontSize="18"/>
        <!--Novo por Aqui? Cadastre-se-->
        <Label Content="Novo por aqui?"
               HorizontalAlignment="Left"
               Margin="295,307,0,0"
               VerticalAlignment="Top"
               FontSize="14"/>
        <Label Content="Cadastre-se"
               HorizontalAlignment="Left"
               Margin="395,307,0,0"
               VerticalAlignment="Top"
               FontWeight="Bold"
               FontSize="14"
               Cursor="Hand"/>
        <!--Esqueceu a sua Senha?-->
        <Label Content="Esqueceu a sua senha?"
               HorizontalAlignment="Left"
               Margin="312,333,0,0"
               VerticalAlignment="Top"
               FontSize="14"
               FontWeight="Bold"
               Cursor="Hand"/>
        <!--Botão Acessasr-->
        <Button x:Name="ButtonAcessar"
                Content="Acessar"
                HorizontalAlignment="Left"
                Margin="286,371,0,0"
                VerticalAlignment="Top"
                Click="ButtonAcessar_Click"
                FontSize="16"
                Height="40"
                Width="206"
                FontWeight="Bold" Background="#FFEDEDED">
            <Button.BorderBrush>
                <SolidColorBrush Color="White" Opacity="0"/>
            </Button.BorderBrush>
        </Button>
    </Grid>
</Window>
