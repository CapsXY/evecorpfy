<Window x:Class="evecorpfy.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:evecorpfy"
        mc:Ignorable="d"
        Title="EVECORPFY - Login"
        Height="542" Width="767"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Icon="C:\Users\CaioA\source\repos\evecorpfy\Resources\logo.png"
        WindowStyle="SingleBorderWindow">
    <Grid x:Name="GridPrincipal">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF71C4F3" Offset="0.909"/>
                <GradientStop Color="White" Offset="0.799"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Image x:Name="ImageLogo" Margin="302,29,301,372" Source="C:\Users\CaioA\source\repos\evecorpfy\Resources\logo.png" Stretch="Fill"/>

        <Label x:Name="LabelTitulo" Content="Acesso ao Sistema" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,154,0,0" FontSize="18" FontWeight="Bold"/>

        <Label x:Name="LabelUsuario" Content="Usuário" HorizontalAlignment="Left" Margin="291,211,0,0" VerticalAlignment="Top" FontSize="18"/>
        <TextBox x:Name="TextBoxUsuario" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="164" FontSize="18" Margin="0,245,0,0"/>

        <Label x:Name="LabelSenha" Content="Senha" HorizontalAlignment="Left" Margin="291,284,0,0" VerticalAlignment="Top" FontSize="18"/>
        <PasswordBox x:Name="PasswordBoxSenha" HorizontalAlignment="Center" Margin="0,318,0,0" VerticalAlignment="Top" Width="164" FontSize="18"/>

        <Button x:Name="ButtonAcessar" Content="Acessar" HorizontalAlignment="Center" Margin="0,368,0,0" VerticalAlignment="Top" Click="ButtonAcessar_Click" FontSize="16" Height="33" Width="113" BorderBrush="{x:Null}" Background="#FF71C4F3" FontWeight="Bold"/>
    </Grid>
</Window>
