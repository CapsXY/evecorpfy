<UserControl x:Class="evecorpfy.ViewsOrganizador.DashboardOrganizador"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:local="clr-namespace:evecorpfy.ViewsOrganizador"
             mc:Ignorable="d" 
             d:DesignHeight="450"
             d:DesignWidth="800"
             Background="white">
    <Grid Margin="30,50,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0"
                    Grid.Column="0"
                    Margin="10">
            <TextBlock Text="Agenda dos Participantes"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="0,0,0,10"/>
            <lvc:CartesianChart Series="{Binding AgendaSeries}"
                                Height="206"
                                Width="360">
                <lvc:CartesianChart.AxisX>
                    <lvc:Axis Title="Participantes"
                              Labels="{Binding AgendaLabels}" />
                </lvc:CartesianChart.AxisX>
                <lvc:CartesianChart.AxisY>
                    <lvc:Axis Title="Eventos" />
                </lvc:CartesianChart.AxisY>
            </lvc:CartesianChart>
        </StackPanel>
        <StackPanel Grid.Row="0"
                    Grid.Column="1"
                    Margin="10">
            <TextBlock Text="Fornecedores mais utilizados"
                       FontSize="18"
                       FontWeight="Bold"
                       Margin="0,0,0,10"/>
            <lvc:PieChart Series="{Binding FornecedoresSeries}"
                          LegendLocation="Right"
                          Height="206"
                          Width="360"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="0" Margin="10">
            <TextBlock Text="Tipos de Participantes"
                       FontSize="18" FontWeight="Bold"
                       Margin="0,0,0,10"/>
            <lvc:PieChart Series="{Binding TiposParticipantesSeries}"
                          LegendLocation="Bottom" Height="206" Width="365"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Grid.Column="1" Margin="10">
            <TextBlock Text="Saldo de Orçamento por Evento"
                       FontSize="18" FontWeight="Bold"
                       Margin="0,0,0,10"/>
            <lvc:CartesianChart Series="{Binding OrcamentoSeries}" Height="206" Width="360">
                <lvc:CartesianChart.AxisX>
                    <lvc:Axis Title="Eventos" Labels="{Binding OrcamentoLabels}" />
                </lvc:CartesianChart.AxisX>
                <lvc:CartesianChart.AxisY>
                    <lvc:Axis Title="Valor (R$)" LabelFormatter="{Binding ValorFormatter}" />
                </lvc:CartesianChart.AxisY>
            </lvc:CartesianChart>
        </StackPanel>
        <Label Content="DASHBOARD DO ORGANIZADOR"
               HorizontalAlignment="Left"
               Margin="10,-42,0,0"
               VerticalAlignment="Top"
               FontWeight="Bold"
               FontSize="18"
               Height="35"
               Width="295"
               Grid.ColumnSpan="2"/>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="0,-42,0,0" Grid.ColumnSpan="2" Height="27">
            <TextBlock Text="De:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <DatePicker x:Name="DateInicio" Width="110" Loaded="datePicker_Loaded"/>
            <TextBlock Text="Até:" VerticalAlignment="Center" Margin="10,0,5,0"/>
            <DatePicker x:Name="DateFim" Width="110" Loaded="datePicker_Loaded"/>
            <Button Content="Pesquisar"
                    Width="80"
                    Height="25"
                    Margin="10,0,0,0"
                    Click="AplicarFiltro_Click"
                    Background="#FFDF8010" FontWeight="Bold"/>
            <Button Content="🧹"
                    x:Name="ButtonLimpar"
                    FontSize="16"
                    Background="#FFDF800F"
                    Width="30"
                    Click="LimparFiltro_Click" Height="25"/>
        </StackPanel>
    </Grid>
</UserControl>
