<UserControl x:Class="evecorpfy.ViewsOrganizador.CadastroEventos"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:evecorpfy.ViewsOrganizador"
             mc:Ignorable="d" 
             d:DesignHeight="684"
             d:DesignWidth="1010"
             Background="White">
    <Grid>
        <!--Background-->
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFDF800F" Offset="1"/>
                <GradientStop Color="White" Offset="0.84"/>
            </LinearGradientBrush>
        </Grid.Background>
        <!--Logo-->
        <Image HorizontalAlignment="Center"
               Height="68"
               Margin="0,16,0,0"
               VerticalAlignment="Top"
               Width="70"
               Source="C:\Users\Lenovo\Documents\GitHub\evecorpfy\Resources\table-orange.png"/>
        <!--Título e Subtítulo-->
        <Label Content="CADASTRO DE EVENTOS"
               HorizontalAlignment="Center"
               Margin="0,59,0,0"
               VerticalAlignment="Top"
               FontWeight="Bold"
               FontSize="36"/>
        <Label Content="Cadastre, altere ou pesquise os seus eventos"
               HorizontalAlignment="Center"
               Margin="0,102,0,0"
               VerticalAlignment="Top"
               FontSize="16"/>
        <Label Content="Nome do evento"
               HorizontalAlignment="Left"
               Margin="277,143,0,0"
               VerticalAlignment="Top"
               FontSize="18"
               FontWeight="Bold"/>
        <TextBox x:Name="TextBoxNomeEvento"
                 HorizontalAlignment="Left"
                 Margin="282,174,0,0"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="450"
                 FontSize="16"/>
        <Label Content="Status"
               HorizontalAlignment="Left"
               Margin="745,143,0,0"
               VerticalAlignment="Top"
               FontSize="18"
               FontWeight="Bold"/>
        <TextBlock HorizontalAlignment="Left"
                   Margin="750,177,0,0"
                   TextWrapping="Wrap"
                   Text="Em Andamento"
                   VerticalAlignment="Top"
                   FontSize="16"/>
        <Label Content="Período do evento"
               HorizontalAlignment="Left"
               Margin="277,201,0,0"
               VerticalAlignment="Top"
               FontSize="18"
               FontWeight="Bold"/>
        <Label Content="Início"
               HorizontalAlignment="Left"
               Margin="280,236,0,0"
               VerticalAlignment="Top"
               FontSize="18"/>
        <DatePicker x:Name="DatePickerInicio"
                    HorizontalAlignment="Left"
                    Margin="334,238,0,0"
                    VerticalAlignment="Top"
                    FontSize="16"/>
        <Label Content="Fim"
               HorizontalAlignment="Left"
               Margin="520,236,0,0"
               VerticalAlignment="Top"
               FontSize="18"/>
        <DatePicker x:Name="DatePickerFim"
                    HorizontalAlignment="Left"
                    Margin="560,238,0,0"
                    VerticalAlignment="Top"
                    FontSize="16"/>
        <Label Content="Informações sobre o local do evento"
               HorizontalAlignment="Left"
               Margin="277,346,0,0"
               VerticalAlignment="Top"
               FontSize="18"
               FontWeight="Bold"/>
        <Label Content="CEP" 
               HorizontalAlignment="Left"
               Margin="281,381,0,0"
               VerticalAlignment="Top"
               FontSize="18"
               FontWeight="Bold"/>
        <TextBox x:Name="TextBoxCEP"
                 HorizontalAlignment="Left"
                 Margin="328,384,0,0"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="120"
                 FontSize="16"
                 PreviewTextInput="TextBoxCEPPrevisualizar"
                 TextChanged="TextBoxCEPIdentador"/>
        <Label Content="Nº"
               HorizontalAlignment="Left"
               Margin="453,379,0,0"
               VerticalAlignment="Top"
               FontSize="18"
               FontWeight="Bold"/>
        <TextBox x:Name="TextBoxNumero"
                 HorizontalAlignment="Left"
                 Margin="490,386,0,0"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="109"
                 FontSize="16"/>
        <Button Content="OK"
                x:Name="ButtonBuscarCEP"           
                HorizontalAlignment="Left"
                Margin="607,385,0,0"
                VerticalAlignment="Top"
                FontSize="16"
                Background="#FFDF800F"
                Width="83"
                Click="ButtonBuscarCEP_Click">
            <Button.BorderBrush>
                <SolidColorBrush Color="#FF707070" Opacity="0"/>
            </Button.BorderBrush>
        </Button>
        <TextBox x:Name="TextBoxEndereco" HorizontalAlignment="Left"
                 Margin="285,420,0,0"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="447"
                 MaxLength="52"
                 FontSize="16"/>
        <Label Content="Capacidade máx."
               HorizontalAlignment="Left"
               Margin="277,276,0,0"
               VerticalAlignment="Top"
               FontSize="18"
               FontWeight="Bold"/>
        <TextBox x:Name="TextBoxCapacidade"
                 HorizontalAlignment="Left"
                 Margin="429,281,0,0"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="77"
                 FontSize="16"/>
        <Label Content="Orçamento"
               HorizontalAlignment="Left"
               Margin="560,276,0,0"
               VerticalAlignment="Top"
               FontSize="18"
               FontWeight="Bold"/>
        <TextBox x:Name="TextBoxOrcamento"
                 HorizontalAlignment="Left"
                 Margin="664,281,0,0"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="69"
                 FontSize="16"/>
        <Label Content="Tipo do evento"
               HorizontalAlignment="Left"
               Margin="280,312,0,0"
               VerticalAlignment="Top"
               FontSize="18"
               FontWeight="Bold"/>
        <ComboBox x:Name="ComboBoxTipoEvento"
                  HorizontalAlignment="Left"
                  Margin="427,319,0,0"
                  VerticalAlignment="Top"
                  Width="305"
                  FontSize="16"/>
        <Label Content="Selecione um evento já cadastrado"
               HorizontalAlignment="Left"
               Margin="355,490,0,0"
               VerticalAlignment="Top"
               FontSize="18"
               FontWeight="Bold"/>
        <ComboBox x:Name="ComboBoxEventos"
                  HorizontalAlignment="Left"
                  Margin="285,529,0,0"
                  VerticalAlignment="Top"
                  Width="448"
                  FontSize="16"/>
        <Button Content="Cadastrar evento"
                x:Name="ButtonCadastrarEvento"           
                HorizontalAlignment="Center"
                Margin="0,448,0,0"
                Height="40"
                Width="206"
                VerticalAlignment="Top"
                FontSize="16"
                Background="#FFDF800F"
                Click="ButtonCadastrarEvento_Click"
                FontWeight="Bold">
            <Button.BorderBrush>
                <SolidColorBrush Color="#FF707070"
                                 Opacity="0"/>
            </Button.BorderBrush>
        </Button>
    </Grid>
</UserControl>
