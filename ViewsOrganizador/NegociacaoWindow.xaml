<Window x:Class="evecorpfy.ViewsOrganizador.NegociacaoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Negociação de Serviços"
        Height="400" Width="600"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock x:Name="TxtEvento" 
                       FontWeight="Bold" 
                       FontSize="16" 
                       Margin="0 0 0 10"/>
            <DataGrid x:Name="DataGridServicos"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      IsReadOnly="True"
                      Margin="0 10 0 0"
                      Height="250">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Serviço" Binding="{Binding Nome}" Width="*"/>
                    <DataGridTemplateColumn Header="Orçamentos">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Ver Orçamentos"
                                        Click="VerOrcamentos_Click"
                                        Tag="{Binding Id}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        Margin="0,10,0,0">
                <Label x:Name="TxtTotal" 
                       FontWeight="Bold" 
                       FontSize="14" 
                       VerticalAlignment="Center" 
                       Margin="0,0,20,0"
                       Content="Total Orçamento: R$ 0,00"/>
                <Button Content="Aceitar Orçamento" 
                        Width="150"
                        Height="30" 
                        Margin="0,0,10,0"
                        Click="Aceitar_Click"/>
                <Button Content="Cancelar Orçamento" 
                        Width="150" Height="30" 
                        Background="Red"
                        Foreground="White"
                        Click="Cancelar_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>